    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "sourceMap": true,
        "lib": ["esnext"],
        "resolveJsonModule": true,
        "sourceRoot": "./src/index.ts",
        "outDir": "./build/ts",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "declaration": true,
        "declarationDir": "./build/d"
